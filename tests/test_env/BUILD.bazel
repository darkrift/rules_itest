load("@rules_go//go:def.bzl", "go_test")
load("@rules_itest//:itest.bzl", "itest_task", "service_test")

env = {
    "ITEST_ENV_VAR": "ITEST_ENV_VAR_VALUE",
    "ITEST_TEST_TMPDIR": "$${TEST_TMPDIR}",
    "ITEST_TMPDIR": "$${TMPDIR}",
    "ITEST_SOCKET_DIR": "$${SOCKET_DIR}",
}

go_test(
    name = "test_env_test",
    srcs = ["env_test.go"],
    env = env,
    tags = ["manual"],
)

service_test(
    name = "env_specified_in_base",
    test = ":test_env_test",
)

go_test(
    name = "_env_not_specified",
    srcs = ["env_test.go"],
    tags = ["manual"],
)

service_test(
    name = "env_specified_in_service_test",
    env = env,
    test = ":_env_not_specified",
)

cc_binary(
    name = "_task_cc",
    srcs = ["task.cc"],
    env = env,
)

itest_task(
    name = "task_cc",
    exe = ":_task_cc",
)

sh_binary(
    name = "_task_sh",
    srcs = ["task.sh"],
    env = env,
)

itest_task(
    name = "task_sh",
    exe = ":_task_sh",
    # sh_binary does not provide RunEnvironmentInfo.
    tags = ["manual"],
)
